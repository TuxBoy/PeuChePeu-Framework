<div class="form-group{% if errors[key] %} has-danger{% endif %}">
    <label for="{{ key }}">{{ label }}</label>
    {% if options %}
        <select
            id="{{ key }}"
            name="{{ key }}"
            class="form-control {% if errors[key] %}form-control-danger{% endif %}">
            {% for k,v in options %}
                <option value="{{ k }}" {% if k == value %}selected{% endif %}>{{ v }}</option>
            {% endfor %}
        </select>
    {% elseif type == 'textarea' %}
        <textarea
                id="{{ key }}"
                name="{{ key }}"
                class="form-control {% if errors[key] %}form-control-danger{% endif %}"
        >{{ value }}</textarea>
    {% else %}
        <input
                type="{{ type ?: 'text' }}"
                id="{{ key }}"
                name="{{ key }}"
                class="form-control {% if errors[key] %}form-control-danger{% endif %} {{ input_class }}"
                value="{{ value }}"
        >
    {% endif %}
    {% if errors[key] %}
        <small class="form-text text-muted">{{ errors[key] | join(',') }}</small>
    {% endif %}
</div>