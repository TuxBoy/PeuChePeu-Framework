{{ csrf_input() }}
{% include 'shared/input.twig' with {key: 'name', label: "Titre", value: item.name} %}
{% include 'shared/input.twig' with {key: 'slug', label: "Slug", value: item.slug} %}
{% include 'shared/input.twig' with {key: 'category_id', label: 'Categorie', value: item.category_id, options: categories} %}
{% include 'shared/input.twig' with {type: 'textarea', key: 'content', label: "Contenu", value: item.content} %}
{% include 'shared/input.twig' with {key: 'created_at', label: "Date de création", value: item.created_at, input_class: 'datepicker'} %}
{% if item.image %}
    <p>
        <img src="/uploads/posts/{{ item.image }}" alt="" width="300">
    </p>
{% endif %}
{% include 'shared/input.twig' with {key: 'image', label: 'Image à la une', type: 'file'} %}